{
  "manifest_version": 3,
  "name": "Serverless LLM Playground",
  "version": "1.0.0",
  "description": "Multi-model LLM chat interface with gesture control and collaborative modes",
  "icons": {
    "16": "icon-16.svg",
    "48": "icon-48.svg",
    "128": "icon-128.svg"
  },
  "action": {
    "default_title": "Open Serverless LLM Playground"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://models.github.ai/*",
    "https://api.github.com/*",
    "https://*.neevs.io/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}