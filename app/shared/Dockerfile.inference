# =============================================================================
# Shared Inference Server Dockerfile
# =============================================================================
# Multi-stage build for efficient inference server images.
# Used by all standard models (qwen, phi, llama, mistral, gemma, deepseek-r1qwen).
#
# Environment:
#   MODEL_NAME - Model name from config/models.py (e.g., "qwen", "phi")
#
# Exception: LFM2, RNJ, and Nemotron have their own Dockerfiles (llama-server wrapper)
# =============================================================================

# Stage 1: Builder - Heavy build dependencies
FROM python:3.11-slim AS builder

ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1

# Install build dependencies for llama-cpp-python
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    libopenblas-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Create virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy shared requirements (all models use the same dependencies)
COPY app/shared/requirements.txt .

# Install with OpenBLAS, OpenMP, and ARM NEON optimizations
# - OpenBLAS: BLAS acceleration for matrix operations
# - OpenMP: Better multi-threading across CPU cores  
# - NEON: SIMD acceleration on ARM processors (like AVX on x86)
# - Flash Attention: Faster attention + enables KV cache quantization
RUN CMAKE_ARGS="-DLLAMA_BLAS=ON -DLLAMA_BLAS_VENDOR=OpenBLAS -DGGML_OPENMP=ON -DGGML_NATIVE=ON -DGGML_NEON=ON -DLLAMA_FLASH_ATTN=ON" \
    pip3 install --no-cache-dir -r requirements.txt

# Stage 2: Runtime - Minimal runtime image
FROM python:3.11-slim AS runtime

ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV PATH="/opt/venv/bin:$PATH"

# Install only runtime libraries (no build tools)
RUN apt-get update && apt-get install -y \
    libopenblas0-pthread \
    libgomp1 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create a non-root user (use UID 10000 to avoid conflicts)
RUN useradd -m -u 10000 appuser

WORKDIR /app

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv

# Copy shared inference base module
COPY --chown=appuser:appuser app/shared/ ./shared/

# Copy centralized config (models.py, inference.yaml)
COPY --chown=appuser:appuser config/ ./config/

# Use shared universal inference server (no per-model file needed)
# MODEL_NAME is passed at runtime via environment variable

# Ensure appuser owns /app directory for cache creation
RUN chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

ENV PORT=8000
EXPOSE 8000

# Health check - works for all models
HEALTHCHECK --interval=30s --timeout=10s --start-period=120s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

CMD ["python3", "shared/inference_server.py"]
