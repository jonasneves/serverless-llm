# =============================================================================
# Shared Inference Server Dockerfile
# =============================================================================
# Multi-stage build for efficient inference server images.
# Used by all standard models (qwen, phi, llama, mistral, gemma, deepseek-r1qwen).
#
# Build args:
#   MODEL_DIR - Directory name (e.g., "qwen-inference", "phi-inference")
#
# Exception: RNJ inference has its own Dockerfile (builds llama.cpp from source)
# =============================================================================

ARG MODEL_DIR

# Stage 1: Builder - Heavy build dependencies
FROM python:3.11-slim AS builder

ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1

# Install build dependencies for llama-cpp-python
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    libopenblas-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Create virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy shared requirements (all models use the same dependencies)
COPY shared/requirements.txt .

# Install with OpenBLAS and ARM NEON optimizations
# NEON provides SIMD acceleration on ARM processors (like AVX on x86)
RUN CMAKE_ARGS="-DLLAMA_BLAS=ON -DLLAMA_BLAS_VENDOR=OpenBLAS -DGGML_NATIVE=ON -DGGML_NEON=ON" \
    pip3 install --no-cache-dir -r requirements.txt

# Stage 2: Runtime - Minimal runtime image
FROM python:3.11-slim AS runtime

ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV PATH="/opt/venv/bin:$PATH"

# Install only runtime libraries (no build tools)
RUN apt-get update && apt-get install -y \
    libopenblas0-pthread \
    libgomp1 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create a non-root user (use UID 10000 to avoid conflicts)
RUN useradd -m -u 10000 appuser

WORKDIR /app

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv

# Copy shared inference base module
COPY --chown=appuser:appuser shared/ ./shared/

# Copy model-specific inference server configuration
ARG MODEL_DIR
COPY --chown=appuser:appuser ${MODEL_DIR}/inference_server.py .

# Ensure appuser owns /app directory for cache creation
RUN chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

ENV PORT=8000
EXPOSE 8000

# Health check - works for all models
HEALTHCHECK --interval=30s --timeout=10s --start-period=120s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

CMD ["python3", "inference_server.py"]
